
@{
    ViewBag.Title = "Post";
}

@section styles{
    <link rel="stylesheet" href="https://cdn.quilljs.com/1.3.6/quill.bubble.css">
    <style>
        img {
            display: block;
            width: 100%;
        }
        .ql-bubble .ql-picker.ql-size .ql-picker-item[data-value="14px"]::before {
            content: 'Normal';
            font-size: 14px !important;
        }

        .ql-bubble .ql-picker.ql-size .ql-picker-item[data-value="16px"]::before {
            content: 'Large';
            font-size: 16px !important;
        }

        .ql-bubble .ql-picker.ql-size .ql-picker-item[data-value="18px"]::before {
            content: 'Huge';
            font-size: 18px !important;
        }
    </style>
}

<h2>@ViewBag.Title</h2>

<div id="editor" data-upload-image-url="~/common/uplImgEditor">
    введи текст
</div>
<div contenteditable="true">
    Начни вводить комментарий
</div>
@section scripts{
    <script src="https://cdn.quilljs.com/1.3.6/quill.js"></script>
    <script>
      
        var imageHandler = (img,callback) => {
            var uplodUrl = $("#editor").data("upload-image-url");
            var data = {
                image: img
            };
            $.post(uplodUrl, data).done((response) => {

            });

        }

        var quill = new Quill('#editor', {
            theme: 'bubble',
            modules: {               
                toolbar: [
                    [{ header: [1, 2, false] }],
                    [{ size: ['14', '16', '18'] }],
                    [{ align: ['center', 'right', 'justify'] }],
                    ['bold', 'italic', 'underline'],
                    ['image'],
                    [{ list: 'ordered' }, { list: 'bullet' }],                                       
                ]
                
            }
        });

    </script>
}

